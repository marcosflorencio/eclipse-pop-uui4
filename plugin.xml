<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="PopUUID4.commands.category"
            name="PopUUID4">
      </category>
      <command
            categoryId="PopUUID4.commands.category"
            id="PopUUID4.commands.sampleCommand"
            name="Copy one UUID to clipboard">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="popuuid4.handlers.SampleHandler"
            commandId="PopUUID4.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="PopUUID4.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="Ctrl+4">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="PopUUID4.menus.sampleMenu"
               label="PopUUID4"
               mnemonic="P">
            <command
                  commandId="PopUUID4.commands.sampleCommand"
                  id="PopUUID4.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="PopUUID4.toolbars.sampleToolbar">
            <command
                  commandId="PopUUID4.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="PopUUID4.toolbars.sampleCommand"
                  tooltip="Copy one UUID to clipboard">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
